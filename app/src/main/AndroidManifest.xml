<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.karoldabrowski.scorekeeper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FootballActivity"
            android:theme="@style/FootballTheme"
            android:label="@string/football_app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TennisActivity"
            android:theme="@style/TennisTheme"
            android:label="@string/tennis_app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BasketballActivity"
            android:theme="@style/BasketballTheme"
            android:label="@string/basketball_app_name"
            android:screenOrientation="portrait" />
    </application>

</manifest>